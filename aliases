alias s='cd ..'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias md='mkdir'
alias mkdir='mkdir -p'
alias rd='rmdir'

alias screenshot='import -pause 5 -window root'
alias processor='cat /proc/cpuinfo'
alias rezo='sudo watch netstat -alpe --ip'
alias update='sudo apt-get update'
alias upgrade='sudo apt-get upgrade'
alias addppa='sudo add-apt-repository'

alias ncal='ncal -w -B 1 -A 2'
alias now='date +%s%3N'
alias ungz-stream="python -c \"import gzip,sys,StringIO;print(gzip.GzipFile(fileobj=StringIO.StringIO(sys.stdin.read())).read())\""

alias htpc='ssh htpc'
alias jpm-run='jpm run -b /usr/bin/firefox'

alias mount-htpc='sudo mount -t cifs //192.168.1.10/Data ~/htpc -o rw,nosetuids,sec=ntlmv2,username=sinse'

